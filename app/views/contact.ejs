<%- include ('partials/header.ejs') %>
<%- include ('partials/main_nav.ejs') %>

<main class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= title %> Me</h1>
  </div>
</main>

<div class="container contact-form-container">
  <div class="jumbotron">
    <div class="contact-form-box"> 
      <form action="/submit-contact" method="POST">
        <div class="form-group">
          <label for="firstName" class="italic-label">First Name:</label>
          <input type="text" id="firstName" name="firstName" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="lastName" class="italic-label">Last Name:</label>
          <input type="text" id="lastName" name="lastName" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="email" class="italic-label">Email:</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="contactNumber" class="italic-label">Contact Number:</label>
          <input type="text" id="contactNumber" name="contactNumber" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="message" class="italic-label">Message:</label>
          <textarea id="message" name="message" class="form-control" rows="4" required></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!--bottom nav-->
<%- include ('partials/bottom_nav.ejs') %>
<!--script section-->
<%- include ('partials/footer.ejs') %>

<style>
  h1 {
    text-align: center;
  }
  .contact-form-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  body {
    background-color: #FDF7F2;
  }
  .contact-form h1 {
    text-align: center;
  }
  .form-group {
    margin-bottom: 20px;
  }
  .form-control {
    width: 100%;
  }
  .italic-label {
    font-style: italic;
  }
  .contact-form .text-center {
    display: flex;
    justify-content: center;
  }
  .contact-form-box {
    border: 2px solid #000;
    padding: 20px;
    border-radius: 10px;
  }
</style>
